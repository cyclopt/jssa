{
    "parser": "babel-eslint",
    "env": {
      "react-native/react-native": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react",
        "react-native",
        "security"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "plugin:security/recommended"
    ],
    "rules": {
      "no-cond-assign": [1, "except-parens"],
      "no-extra-semi": 1,
      "no-irregular-whitespace": 1,
      "no-unexpected-multiline": 1,
      "default-case": 1,
      "eqeqeq": 1,
      "no-empty-function": 1,
      "no-multi-spaces": 1,
      "no-unused-labels": 1,
      "yoda": [1, "never"],
      "max-depth": 1,
      "max-nested-callbacks": 1,
      "no-trailing-spaces": 1,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-empty": 2,
      "no-empty-character-class": 2,
      "no-func-assign": 2,
      "no-invalid-regexp": 2,
      "no-unreachable": 2,
      "use-isnan": 2,
      "no-redeclare": 2,
      "no-self-assign": 2,
      "no-shadow": 2,
      "no-use-before-define": 2,
      "no-unused-vars": 2
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.6.1"
        }
    }
  }