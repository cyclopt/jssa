{
    "parser": "babel-eslint",
    "env": {
      "react-native/react-native": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "script",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react",
        "react-native",
        "security",
        "sonarjs"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "plugin:security/recommended",
      "plugin:sonarjs/recommended" 
    ],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.6.1"
        }
    },
    "ignorePatterns": ["cypress/", "test/", "tests/"]
  }